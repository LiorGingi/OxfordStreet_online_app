@model OxfordStreet_online_app.Models.Employee

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="dl-horizontal">
        
        <dt>
            Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName)
        </dd>
        
        <dt>
            Email
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.Email)
        </dd>

        <dt>
            Branch
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Branch.Name)
        </dd>

        <dt>
            Monthly Salary
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MonthlySalary)
        </dd>

        <dt>
            Role
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Role)
        </dd>

        <dt>
            Is Manager?
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IsManager)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.EmployeeId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
