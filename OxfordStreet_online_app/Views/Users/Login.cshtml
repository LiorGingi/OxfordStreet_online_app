
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@if (ViewBag.Error != null)
{
    <div class="alert-danger">
        Error: @ViewBag.Error
    </div>
}

    <form method="post" action="@Url.Action("Login", "Users")">
        @Html.AntiForgeryToken()
        <label for="email">Email:</label>
        <input class="form-control" type="email" name="email" id="email" value="" /><br />
        <label for="password">Password:</label>
        <input class="form-control" type="password" name="password" id="password" value="" /><br /><br />
        <input class="btn btn-default btn-lg btn-block" type="submit" value="Submit" />
    </form>